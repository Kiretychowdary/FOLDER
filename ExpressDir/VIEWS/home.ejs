<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nerko+One&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <title>RADHAKRISHNA</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
</head>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Nerko+One&display=swap');

    .info {
        height: 300px;
        width: 600px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        margin: 0;
        position: absolute;
        left: 30%;

        /* background-image: url("saraswathi.jpg"); */

    }

    .profile-img img {
        height: 200px;
        width: 200px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 20px;
    }

    .information {

        display: flex;
        flex-direction: column;
        height: 50px;
        width: 400px;
    }

    .information .btn {
        margin-left: 10px;
        background-color: white;

    }

    .information .btn:hover {
        background-color: aqua;
    }

    .nerko-one-regular {
        font-family: "Roboto", sans-serif;
        font-weight: 400;
        font-style: normal;
    }

    .information1 {
        display: flex;
        flex-direction: row;
    }

    @media (max-width:796px) {
        .information1 {
            flex-direction: column;

        }

        .btn {
            width: 100px;
        }

        .follow-btn {
            display: none;
        }
    }

    @media (max-width:100px) {
        .info {
            left: 0;
            position: relative;
            flex-direction: column;
        }

        .information {
            left: 120px;
            position: relative;
        }

        .profile-img img {
            left: 0;
            position: absolute;
        }
    }


    @media (max-width:520px) {
        .info {
            left: 0;
            position: relative;
            flex-direction: column;
        }

        .information {
            left: 120px;
            position: relative;
        }

        .profile-img img {
            left: 0;
            position: absolute;
        }
    }

    /* post */

    .post {
        background: transparent;
        border: none;
        left: 0;
        width: 100px;
        position: relative;
    }

    /* views */
    .views {
        display: flex;
        justify-content: space-around;
        left: 50%;
    }

    .views-post {
        position: relative;
    }

    .post-view {
        background: transparent;
        border: none;
        margin-left: 40px;
    }

    .post-view:hover {
        border-bottom: 1px solid black;
    }
</style>

<body>
    <div class="bio" style="position: relative;height: 300px;">
        <section class="info">

            <div class="profile-img">
                <!-- <img src="saraswathi.jpg" alt="MYLOVE"> -->
                <img src="<%= data.profile%>">

            </div>

            <div class="information">
                <div class="information1">
                    <div class="name">
                        <!-- <h2 class="nerko-one-regular">RadhaKrishna</h2> -->
                        <!-- <h2 class="nerko-one-regular">RadhaKrishna</h2> -->
                         <!-- <h2 class="nerko-one-regular">RadhaKrishna</h2> -->
                        <h2 class="nerko-one-regular">
                            <%= data.name %>
                        </h2>

                    </div>
                    <button type="button" class="btn btn-info" fdprocessedid="ar9xk">Follow</button>
                    <button type="button" class="btn btn-info" fdprocessedid="ar9xk">Message</button>
                </div>
                <br>
                <div class="follow-btn">
                    <button class="post"><span>10000000</span><span class="nerko-one-regular"> post</span></button>
                    <button class="post"><span>10000000</span><span class="nerko-one-regular"> Followers</span></button>
                    <button class="post"><span>10000000</span><span class="nerko-one-regular"> Follow</span></button>

                </div>

            </div>
            <br>
        </section>
    </div>
    <!-- Post views -->
    <section class="views">
        <div class="views-post">
            <button class="post-view"><span class="nerko-one-regular"> post</span></button>
            <button class="post-view"><span class="nerko-one-regular"> Followers</span></button>
            <button class="post-view"><span class="nerko-one-regular"> Follow</span></button>

        </div>
    </section>
</body>

</html>